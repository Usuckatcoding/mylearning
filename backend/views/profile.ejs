    </head>
    <body>
            <div class="container-fluid " id="user">
                <svg width="200" height="50" viewBox="0 0 200 60" xmlns="http://www.w3.org/2000/svg">
                <rect width="200" height="60" fill="#f9f9f9" />
                <!-- Icon (a stylized echo wave inside a chat bubble) -->
                <g transform="translate(10,10)">
                    <rect x="0" y="0" width="40" height="40" rx="8" fill="#1976d2" />
                    <path d="M12 14c4 0 8 4 12 4s8-4 12-4" stroke="#fff" stroke-width="2" fill="none" />
                    <circle cx="12" cy="28" r="2" fill="#fff" />
                </g>
                <!-- Text "EchoTimes" -->
                <text x="60" y="35" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="#212121">
                    Echo
                    <tspan fill="#1976d2">Times</tspan>
                </text>
            </svg>
            <!-- <i class="bi bi-person-circle" id="profileicon"></i> -->
            <!-- <h3>Gautam</h3> -->
            </div>
            <div class="container-fluid" id="user-info">
            <div class="username">
                <h3>Your User name:Gautam</h3>
                <button class="btn btn-primary" id="edit">Edit</button>
            </div>
            <form action="/" id="edit-inputs">
            <input type="text"  id="reset-username" placeholder="Enter your username">
            <input type="password" id="reset-password" placeholder="Enter your Password">
            <button type="submit" id="reset-user-submit">Submit</button>
            </form>
            <script>
                let pass=document.getElementById('edit-inputs');
                pass.style.display='none';
               document.getElementById('edit').addEventListener('click',(a)=>{
                a.preventDefault();
                pass.style.display=pass.style.display==='none'?'flex':'none';
               });
               document.getElementById('reset-user-submit').addEventListener('click',()=>{
                pass.style.display='none';
               });
            </script>
            <div class="change-password">
                <h3>Change your Password</h3>
                <button class="btn btn-primary" id="change">Change Password</button>
            </div>
            <form action="/" id="edit-pass">
                <input type="text"  id="old-password" placeholder="Enter your old-password">
                <input type="password" id="new-password" placeholder="Enter new-password ">
                <input type="password" id="old-password" placeholder="Enter your old-password">
                <button type="submit" id="reset-pass-submit">Submit</button>
            </form>
            <script>
                let display=document.getElementById('edit-pass');
                display.style.display='none';
               document.getElementById('change').addEventListener('click',(e)=>{
                e.preventDefault();
                display.style.display=display.style.display==='none'?'flex':'none';
               });
               document.getElementById('reset-pass-submit').addEventListener('click',()=>{
                display.style.display='none';
               });
            </script>
            </div>
            <div style="position: absolute; bottom: 0;text-align:center; width: 100vw;">
                <h6 > this page is under development</h6>
            </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>